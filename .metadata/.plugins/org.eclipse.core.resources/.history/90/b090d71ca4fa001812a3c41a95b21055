
/**
 * Purpose : This program take input from user rows,columns and print the 2D array for
 *           integer, double and boolean value.
 * @author  Asmita Nalawade
 * @version 1.0
 * @since   3/12/2018          
 */


package com.bridgelabz.week3;
import utility.Utility;


public class Array {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Take input from user rows and columns
		System.out.println("Enter the rows and columns");
		int m = Utility.inputInt();
		int n = Utility.inputInt();
		int array[][] = new int[m][n];
		//Enter the elements
		System.out.println("Enter " + m*n + " element ");
		for(int i = 0; i < m ;i++) {
			for(int j = 0; j < n; j++) {
				array[i][j] = Utility.inputInt();
			}
		}
		
		// print 2D array
		System.out.println("Enter the 2D array");
		for(int i = 0; i < m; i++) {
			for(int j = 0; j < n; j++) {
			System.out.print(array[i][j] + " ");	

			}
			System.out.println();
		}	


		
		
	}

}
