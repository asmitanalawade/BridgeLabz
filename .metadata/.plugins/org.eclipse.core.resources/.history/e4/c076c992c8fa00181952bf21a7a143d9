
/**
 * Purpose : This program take the input from the user and print the 2D array of the 
 *          prime numbers.
 * @author  Asmita Nalawade
 * @version 1.0
 * @since   4/12/2018          
 */

package com.bridgelabz.week3;

import java.io.*;



import utility.Utility;

public class PrimeArray {

	//private static int[] intArray;

	
		// TODO Auto-generated method stub
	// check whether a number is prime or not
		boolean isPrime(int n) { 
	    
	        int c = 0;
	        for(int i = 1; i<=n; i++)
	        {
	            if(n%i == 0)
	                c++;
	        }
	        if(c == 2)
	            return true;
	        else
	            return false;
	    }
	     
	   public static void main(String args[])throws IOException{
	   
	       PrimeArray ob = new PrimeArray();
	      // BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
	 
	       System.out.print("Enter the number of rows: ");
	       int m=Utility.inputInt();
	       System.out.print("Enter the number of columns: ");
	       int n=Utility.inputInt();
	       
	       // 2D array for storing 'm*n' prime numbers 
	       int A[][]=new int[m][n];
	       // 1D array for storing 'm*n' prime numbers
	       int B[] = new int [m*n]; 
	       
	       // For generating natural numbers 
	       int i = 0, j;
	       int k = 1; 
	        
	       // First saving the 'm*n' prime numbers into a 1D Array */
	       while(i < m*n)
	       {
	           if(ob.isPrime(k)==true)
	           {
	                   B[i] = k;
	                   i++;
	           }
	           k++;
	       }
	        
	       // Saving the 'm*n' prime numbers from 1D array into the 2D Array */
	       int x = 0;
	       for(i=0; i<m; i++)
	        {
	           for(j=0; j<n; j++)
	           {
	               A[i][j] = B[x];
	               x++;
	           }
	        }
	             
	       // Printing the resultant 2D array */
	       System.out.println("2D Array is :");
	       for(i=0; i<m; i++)
	        {
	            for(j=0; j<n; j++)
	                {
	                    System.out.print(A[i][j]+"\t");
	                }
	            System.out.println();
	        }
	
	}
	
	
	
	
	
   
	


}
