package com.bridgelabz.week3;

import java.util.Arrays;

public class AnagramArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n = 1000;
		int k = 0; 
		int i;
		int intArray[] = new int[n];
		boolean status = true;
		for(i = 0; i <= n; i++) {
			
			for(int j = 2; j < i; j++) {
				if(i % j == 0) {
					status = false;
					break;
				}else {
					status = true;
				}
				if(status) {
					if(i!=1 || i!=0) {
					    //System.out.println(i + " ");
					    //Scan the result into integer array
					    intArray[k] = i;
					    k++;
					}
					
				}
			}
			System.out.println("Anagram are : ");
			checkAnagram(intArray, k);
		}
		

	}
	public static void checkAnagram(int intArray[], int k) {
		String str1, strArray;
		String a[] = new String[k];
		boolean status = false;
		for(int i = 0; i < k; i++) {
			//Convert integer to string and sort the array
		      strArray = Integer.toString(intArray[i]);
		      //Covert string to character of array
			  char b [] = strArray.toCharArray();
			  Arrays.sort(b);
			  //Convert string to integer
			  str1 = String.valueOf(b);
			  a[i] = str1;
					
		}
		System.out.println();
		for(int p = 0; p <= k; p++) {
			for(int q = p+1; q < k; q++) {
				if(a[p].equals(a[q])) {
					System.out.println(intArray[p] + "--" + intArray[q]);
				    status = false;
				    break;
				}
			}
			if(status == true) {
				System.out.println("Exit");
			}
		}
		
	}

}
