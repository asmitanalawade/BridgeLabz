package com.bridgelabz.week3;

import java.util.Arrays;

public class AnagramArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int m = 0, n = 1000;
		int k = 0; int i;
		int intArray[] = new int[k];
		for(i = m; i < n; i++) {
			boolean status = true;
			for(int j = 2; j < n; j++) {
				if(i % j == 0) {
					status = false;
				}else {
					status = true;
				}
				if(status) {
					if(i!=1 || i!=0) {
					    System.out.println(i + " ");
					    intArray[k] = i;
					    k++;
					}
				}
			}
			System.out.println("Anagram are : ");
		}
		

	}
	public static void checkAnagram(int intArray[], int k) {
		String str1, strArray;
		String a[] = new String[k];
		boolean status = true;
		for(int i = 0; i < k; i++) {
		      strArray = Integer.toString(intArray[k]);
			  char b [] = strArray.toCharArray();
			  Arrays.sort(b);
			  str1 = String.valueOf(b);
			  a[i] = str1;
					
		}
		System.out.println();
		for(int p = 0; p < k; p++) {
			for(int q = p+1; q < k; q++) {
				if(a[p].equals(a[q])) {
					System.out.println(intArray[p] + "-" + intArray[q]);
				    status = false;
				}
			}
			if(status) {
				System.out.println("Exit");
			}
		}
		
	}

}
